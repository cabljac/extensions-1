{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitReturns": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "@types/jest"],
    "declaration": true,
    "declarationDir": "lib"
  },
  "compileOnSave": true,
  "include": ["src"]
}
